<div class="container">
  <div class="text-center">
    <h2>New game</h2>
    <div class="liste">
      <ul class="d-flex justify-content-around" id="list_de_lettres">
        <% @letters.each do |letter| %>
          <div class="letters">
            <li class="letter"><%= letter %></li>
          </div>
        <% end %>
      </ul>
    </div>

      <p>What is the longest word you can find?</p>
    <form action="/score" method="post" class="d-flex formulaire">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token  %>
      <%= hidden_field_tag :letters, @letters  %>
      <input class="flex-grow-1" id="label" type="text" name="answer">
      <input class="btn btn-success" type="submit" value="Play" id="askbtn">
    </form>
  </div>
</div>
